class Product {
    String name;
    double price;

    Product(String name, double price) {
        this.name = name;
        this.price = price;
    }
}

class Cart {
    Product[] items;
    int itemCount;

    Cart(int capacity) {
        items = new Product[capacity];
        itemCount = 0;
    }

    void addItem(Product product) {
        if (itemCount < items.length) {
            items[itemCount] = product;
            itemCount++;
        }
    }

    double calculateTotal() {
        double total = 0.0;
        for (int i = 0; i < itemCount; i++) {
            total += items[i].price;
        }
        return total;
    }
}

class Customer {
    String name;
    Cart cart;

    Customer(String name) {
        this.name = name;
        cart = new Cart(10);
    }
}

public class Prog4 {
    public static void main(String[] args) {
        Product product1 = new Product("Laptop", 1000.0);
        Product product2 = new Product("Headphones", 50.0);

        Customer customer = new Customer("Alice");
        customer.cart.addItem(product1);
        customer.cart.addItem(product2);

        System.out.println("Customer: " + customer.name);
        System.out.println("Items in Cart:");
        for (Product item : customer.cart.items) {
            if (item != null) {
                System.out.println(item.name);
            }
        }
        System.out.println("Total Price: $" + customer.cart.calculateTotal());
    }
}
